<!-- navbar -->
@{
    var currentPage = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";
    var activeIf = new Func<string, string>((page) => currentPage.ToLower().Contains(page.ToLower()) ? "active" : "");
}
<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class=@(activeIf("index"))><a href="index">Home</a></li>
                <li class="dropdown @(activeIf("aboutjenni")) @(activeIf("paediatricot"))">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">About <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li class=@(activeIf("aboutjenni"))><a href="aboutjenni">About Jenni</a></li>
                        <li class=@(activeIf("paediatricot"))><a href="paediatricot">About Paediatric Occupational Therapy</a></li>
                    </ul>
                </li>
                <li class="dropdown @(activeIf("checklist"))">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Checklists <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li class=@(activeIf("checklist2"))><a href="checklist2-3">for 2 - 3 year olds</a></li>
                        <li class=@(activeIf("checklist3"))><a href="checklist3-4">for 3 - 4 year olds (kindy)</a></li>
                        <li class=@(activeIf("checklist5"))><a href="checklist5">for 5 year olds (prep)</a></li>
                    </ul>
                </li>
                <li><a href="aboutjenni#contact">Contact</a></li>
            </ul>
        </div>
    </div>
</div>

